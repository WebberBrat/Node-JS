<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %></title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <div class="container">
    <h1><%= post.title %></h1>
    <p><strong>Author:</strong> <%= post.author.username %></p>
    <p><%= post.description %></p>

    <!-- Conditionally render Edit/Delete buttons -->
    <% if (user && user._id.toString() === post.author._id.toString()) { %>
      <a href="/edit/<%= post._id %>" class="btn">Edit</a>
      <a href="/delete/<%= post._id %>" class="btn">Delete</a>
    <% } %>

    <a href="/posts" class="btn">Back to Posts</a>
  </div>
</body>
</html>